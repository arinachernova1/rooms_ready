        <Label x:Name="LabelPerimeter2" Grid.Column="1" Content="Label" HorizontalAlignment="Left" Margin="521,194,0,0" VerticalAlignment="Top" Width="84"/>
        <Label x:Name="LabelArea2" Grid.Column="1" Content="Label" HorizontalAlignment="Left" Margin="521,223,0,0" VerticalAlignment="Top" Width="60"/>
        <Label x:Name="LabelPersonArea2" Grid.Column="1" Content="Label" HorizontalAlignment="Left" Height="29" Margin="521,254,0,0" VerticalAlignment="Top" Width="60" RenderTransformOrigin="0.712,-0.044"/>
        <Label x:Name="LabelAllArea" Grid.Column="1" Content="Label" HorizontalAlignment="Left" Margin="377,390,0,0" VerticalAlignment="Top" Width="103"/>

    </Grid>
</Window>
