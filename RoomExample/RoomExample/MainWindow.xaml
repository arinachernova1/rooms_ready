        <Label Content="Длина" HorizontalAlignment="Left" Margin="46,101,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" RenderTransformOrigin="0.46,0.127" FontSize="14"/>
        <Label Content="Ширина&#xD;&#xA;" HorizontalAlignment="Left" Margin="46,131,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" FontSize="14"/>
        <Label Content="Число человек&#xD;&#xA;" HorizontalAlignment="Left" Margin="46,154,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" FontSize="14"/>
        <Label Content="Периметр &#xD;&#xA;" HorizontalAlignment="Left" Margin="48,188,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" FontSize="14"/>
        <Label Content="Площадь&#xD;&#xA;" HorizontalAlignment="Left" Margin="48,217,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.037,-0.471" Grid.ColumnSpan="2" FontSize="14"/>
        <Label Content="Метраж&#xD;&#xA;" HorizontalAlignment="Left" Margin="56,251,0,0" VerticalAlignment="Top" FontSize="14" Grid.ColumnSpan="2"/>
        <Label Grid.Column="1" Content="Длина&#xD;&#xA;" HorizontalAlignment="Left" Margin="352,102,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Grid.Column="1" Content="Ширина&#xD;&#xA;" HorizontalAlignment="Left" Margin="355,132,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Grid.Column="1" Content="Число человек&#xD;&#xA;" HorizontalAlignment="Left" Margin="347,159,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Grid.Column="1" Content="Периметр&#xD;&#xA;" HorizontalAlignment="Left" Margin="350,191,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Grid.Column="1" Content="Площадь&#xD;&#xA;" HorizontalAlignment="Left" Margin="355,222,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Grid.Column="1" Content="Метраж&#xD;&#xA;" HorizontalAlignment="Left" Margin="354,251,0,0" VerticalAlignment="Top" FontSize="14"/>

        <Button x:Name="ExitButton" Grid.Column="1" Content="Выход&#xD;&#xA;" HorizontalAlignment="Left" Margin="578,22,0,0" VerticalAlignment="Top" Width="97" Height="29" Click="ExitButton_Click"/>
        <Button x:Name="ButtonOpen1" Content="Открыть&#xD;&#xA;" HorizontalAlignment="Left" Margin="48,344,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="32" Width="74" Click="ButtonOpen1_Click"/>
        <Button x:Name="ButtonAll" Content="Посчитать вместе&#xD;&#xA;" HorizontalAlignment="Left" Margin="48,397,0,0" VerticalAlignment="Top" Height="27" Width="127" Grid.ColumnSpan="2" Click="ButtonAll_Click_1"/>
        <Button x:Name="ButtonOpen2" Grid.Column="1" Content="Открыть &#xD;&#xA;" HorizontalAlignment="Left" Margin="376,344,0,0" VerticalAlignment="Top" Height="32" Width="77" Click="ButtonOpen2_Click_1"/>
        <Label Grid.Column="1" Content="Общая площадь&#xD;&#xA;" HorizontalAlignment="Left" Margin="247,387,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LabelLength1" Grid.Column="1" Content="Label" HorizontalAlignment="Left" Margin="142,108,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.06,0.633" Width="99"/>
